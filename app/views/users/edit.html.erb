<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Edit User #<%= @user.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_user/<%= @user.id %>" class="form-horizontal">
      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="col-sm-2 control-label">
          Name
        </label>
        <div class="col-sm-10">
          <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @user.name %>">
        </div>
      </div>

      <!-- Label and input for email -->
      <div class="form-group">
        <label for="email" class="col-sm-2 control-label">
          Email
        </label>
        <div class="col-sm-10">
          <input type="text" id="email" name="email" placeholder="Email" class="form-control" value="<%= @user.email %>">
        </div>
      </div>

      <!-- Label and input for first_name -->
      <div class="form-group">
        <label for="first_name" class="col-sm-2 control-label">
          First name
        </label>
        <div class="col-sm-10">
          <input type="text" id="first_name" name="first_name" placeholder="First name" class="form-control" value="<%= @user.first_name %>">
        </div>
      </div>

      <!-- Label and input for last_name -->
      <div class="form-group">
        <label for="last_name" class="col-sm-2 control-label">
          Last name
        </label>
        <div class="col-sm-10">
          <input type="text" id="last_name" name="last_name" placeholder="Last name" class="form-control" value="<%= @user.last_name %>">
        </div>
      </div>

      <!-- Label and input for phone_number -->
      <div class="form-group">
        <label for="phone_number" class="col-sm-2 control-label">
          Phone number
        </label>
        <div class="col-sm-10">
          <input type="text" id="phone_number" name="phone_number" placeholder="Phone number" class="form-control" value="<%= @user.phone_number %>">
        </div>
      </div>

      <!-- Label and input for address1 -->
      <div class="form-group">
        <label for="address1" class="col-sm-2 control-label">
          Address1
        </label>
        <div class="col-sm-10">
          <input type="text" id="address1" name="address1" placeholder="Address1" class="form-control" value="<%= @user.address1 %>">
        </div>
      </div>

      <!-- Label and input for address2 -->
      <div class="form-group">
        <label for="address2" class="col-sm-2 control-label">
          Address2
        </label>
        <div class="col-sm-10">
          <input type="text" id="address2" name="address2" placeholder="Address2" class="form-control" value="<%= @user.address2 %>">
        </div>
      </div>

      <!-- Label and input for city -->
      <div class="form-group">
        <label for="city" class="col-sm-2 control-label">
          City
        </label>
        <div class="col-sm-10">
          <input type="text" id="city" name="city" placeholder="City" class="form-control" value="<%= @user.city %>">
        </div>
      </div>

      <!-- Label and input for state -->
      <div class="form-group">
        <label for="state" class="col-sm-2 control-label">
          State
        </label>
        <div class="col-sm-10">
          <input type="text" id="state" name="state" placeholder="State" class="form-control" value="<%= @user.state %>">
        </div>
      </div>

      <!-- Label and input for zip -->
      <div class="form-group">
        <label for="zip" class="col-sm-2 control-label">
          Zip
        </label>
        <div class="col-sm-10">
          <input type="text" id="zip" name="zip" placeholder="Zip" class="form-control" value="<%= @user.zip %>">
        </div>
      </div>

      <!-- Label and input for country -->
      <div class="form-group">
        <label for="country" class="col-sm-2 control-label">
          Country
        </label>
        <div class="col-sm-10">
          <input type="text" id="country" name="country" placeholder="Country" class="form-control" value="<%= @user.country %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Update User" class="btn btn-primary">
        </div>
      </div>
    </form>
  </div>
</div>

