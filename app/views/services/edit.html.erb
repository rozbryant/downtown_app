          </div>
        </div>
      </div>

      <!-- Label and input for restaurant -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="checkbox">
            <label for="restaurant">
              <input type="checkbox" id="restaurant" name="restaurant" value="1" <%= "checked" if @service.restaurant %>>
              Restaurant
            </label>
          </div>
        </div>
      </div>

      <!-- Label and input for social -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="checkbox">
            <label for="social">
              <input type="checkbox" id="social" name="social" value="1" <%= "checked" if @service.social %>>
              Social
            </label>
          </div>
        </div>
      </div>

      <!-- Label and input for groceries -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="checkbox">
            <label for="groceries">
              <input type="checkbox" id="groceries" name="groceries" value="1" <%= "checked" if @service.groceries %>>
              Groceries
            </label>
          </div>
        </div>
      </div>

      <!-- Label and input for note -->
      <div class="form-group">
        <label for="note" class="col-sm-2 control-label">
          Note
        </label>
        <div class="col-sm-10">
          <textarea id="note" name="note" placeholder="Note" class="form-control" rows="3"><%= @service.note %></textarea>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Update Service" class="btn btn-primary">
        </div>
      </div>
    </form>
    <% else %>
  Please <a href="/users/sign_in">sign in</a> to view.
  <% end %>
  </div>
</div>

