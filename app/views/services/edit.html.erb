<% if current_user.present? %>
<% if @service.errors.any? %>
  <% @service.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Edit Service #<%= @service.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_service/<%= @service.id %>" class="form-horizontal">
      <!-- Label and input for building_id -->
      <div class="form-group">
        <label for="building_id" class="col-sm-2 control-label">
          Building
        </label>
        <div class="col-sm-10">
          <input type="text" id="building_id" name="building_id" placeholder="Building" class="form-control" value="<%= @service.building_id %>">
        </div>
      </div>

      <!-- Label and input for part_door -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="checkbox">
            <label for="part_door">
              <input type="checkbox" id="part_door" name="part_door" value="1" <%= "checked" if @service.part_door %>>
              Part door
            </label>
          </div>
        </div>
      </div>

      <!-- Label and input for full_door -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="checkbox">
            <label for="full_door">
              <input type="checkbox" id="full_door" name="full_door" value="1" <%= "checked" if @service.full_door %>>
              Full door
            </label>
          </div>
        </div>
      </div>

      <!-- Label and input for catering -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="checkbox">
            <label for="catering">
              <input type="checkbox" id="catering" name="catering" value="1" <%= "checked" if @service.catering %>>
              Catering
            </label>
          </div>
        </div>
      </div>

      <!-- Label and input for housekeeping -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="checkbox">
            <label for="housekeeping">
              <input type="checkbox" id="housekeeping" name="housekeeping" value="1" <%= "checked" if @service.housekeeping %>>
              Housekeeping
            </label>
          </div>
        </div>
      </div>

      <!-- Label and input for dry_cleaning -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="checkbox">
            <label for="dry_cleaning">
              <input type="checkbox" id="dry_cleaning" name="dry_cleaning" value="1" <%= "checked" if @service.dry_cleaning %>>
              Dry cleaning
            </label>
          </div>
        </div>
      </div>

      <!-- Label and input for concierge -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="checkbox">
            <label for="concierge">
              <input type="checkbox" id="concierge" name="concierge" value="1" <%= "checked" if @service.concierge %>>
              Concierge
            </label>
          </div>
        </div>
      </div>

      <!-- Label and input for package_receiving -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="checkbox">
            <label for="package_receiving">
              <input type="checkbox" id="package_receiving" name="package_receiving" value="1" <%= "checked" if @service.package_receiving %>>
