<% if current_user.present? %>
<div class="page-header">
  <h1>Comment #<%= @comment.id %></h1>
</div>

<dl class="dl-horizontal">
  <dt>Content</dt>
  <dd><%= @comment.content %></dd>

  <dt>Commenter</dt>
  <dd><%= @comment.user.email %></dd>

  <dt>Building</dt>
  <dd><%= @comment.building.name %></dd>
<% else %>
  Please <a href="/users/sign_in">sign in</a> to view.
  <% end %>
</dl>
