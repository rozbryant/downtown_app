<% if @comment.errors.any? %>
  <% @comment.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Add Comment</h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_comment" class="form-horizontal">
      <!-- Label and input for content -->
      <div class="form-group">
        <label for="content" class="col-sm-2 control-label">
          Content
        </label>
        <div class="col-sm-10">
          <textarea id="content" name="content" placeholder="Content" class="form-control" rows="3"><%= @comment.content %></textarea>
        </div>
      </div>

      <!-- Label and input for commenter_id -->
      <div class="form-group">
        <label for="commenter_id" class="col-sm-2 control-label">
          Commenter
        </label>
        <div class="col-sm-10">
          <%= select_tag(:commenter_id, options_from_collection_for_select(User.all, :id, :name, @comment.commenter_id), :class => "form-control") %>
        </div>
      </div>

      <!-- Label and input for building_id -->
      <div class="form-group">
        <label for="building_id" class="col-sm-2 control-label">
          Building
        </label>
        <div class="col-sm-10">
          <%= select_tag(:building_id, options_from_collection_for_select(Building.all, :id, :name, @comment.building_id), :class => "form-control") %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Create Comment" class="btn btn-primary">
        </div>
      </div>
    </form>
  </div>
</div>


</div>
