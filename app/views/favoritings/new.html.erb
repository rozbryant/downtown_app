<% if @favoriting.errors.any? %>
  <% @favoriting.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Add Favoriting</h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_favoriting" class="form-horizontal">
      <!-- Label and input for building_id -->
      <div class="form-group">
        <label for="building_id" class="col-sm-2 control-label">
          Building
        </label>
        <div class="col-sm-10">
          <%= select_tag(:building_id, options_from_collection_for_select(Building.all, :id, :name, @favoriting.building_id), :class => "form-control") %>
        </div>
      </div>

      <!-- Label and input for favorited_by -->
      <div class="form-group">
        <label for="favorited_by" class="col-sm-2 control-label">
          Favorited by
        </label>
        <div class="col-sm-10">
          <%= select_tag(:favorited_by, options_from_collection_for_select(User.all, :id, :name, @favoriting.favorited_by), :class => "form-control") %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Create Favoriting" class="btn btn-primary">
        </div>
      </div>
    </form>
  </div>
</div>


</div>
