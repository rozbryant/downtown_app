<% if @favoriting.errors.any? %>
  <% @favoriting.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Edit Favoriting #<%= @favoriting.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_favoriting/<%= @favoriting.id %>" class="form-horizontal">
      <!-- Label and input for building_id -->
      <div class="form-group">
        <label for="building_id" class="col-sm-2 control-label">
          Building
        </label>
        <div class="col-sm-10">
          <input type="text" id="building_id" name="building_id" placeholder="Building" class="form-control" value="<%= @favoriting.building_id %>">
        </div>
      </div>

      <!-- Label and input for favorited_by -->
      <div class="form-group">
        <label for="favorited_by" class="col-sm-2 control-label">
          Favorited by
        </label>
        <div class="col-sm-10">
          <input type="text" id="favorited_by" name="favorited_by" placeholder="Favorited by" class="form-control" value="<%= @favoriting.favorited_by %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Update Favoriting" class="btn btn-primary">
        </div>
      </div>
    </form>
  </div>
</div>

