<div class="row">
 <div class="col-md-12">
  <h3><%= @building.name %> <a href="/favoritings/new" class="btn btn-warning btn-xs">
    <i class="fa fa-star-o"></i>
  </a>
</h3>
<h5><%= @building.address %>, <%= @building.city %>, <%= @building.state %> <%= @building.zip %></h5>
<h5><%= @building.headline %> <%= @building.stat.unit_count %> units, <%= @building.stat.stories %> stories</h5>
</div>
</div>
<div class="row">
  <div class="col-md-4" align="center">
    <div class="well well-lg">
      <img src="<%= @building.image_url %>" width=400px height=400px alt="<%= @building.name %>" class="img-responsive">
    </div>
  </div>
  <div class="col-md-2">
    <div class="panel panel-primary">

      <div class="panel-heading">
        <h3 class="panel-title">Neighborhoods</h3>
      </div>
      <div class="panel-body">
        <% @building.assignments.each do |assignment| %>
        <%= assignment.area.name %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-2">
