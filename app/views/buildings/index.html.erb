<div class="page-header">
  <h1>Buildings</h1>
<p><a href="/assignments/new" class="btn btn-primary">Assign a Neighborhood</a>
<a href="/buildings/new" class="btn btn-primary">Add a New Building</a></p>
</div>

<div class="form-group">
<form action="/_search" class="form-horizontal">
  <%= form_tag :controller => 'buildings', :action => 'search', :method => 'get' do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", :name => nil %>
  <% end %>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>


    <% @buildings.each do |building| %>
      <tr>
        <td>
        <a href="/buildings/<%= building.id %>" class="thumbnail">
        <img src="<%= building.image_url %>" data-src="holder.js/100%x180" alt="Photo not found" height="90" width="90">
        </a></td>
        <td><%= building.name %></td>
        <td><%= building.address %></td>
        <td><%= building.city %></td>
        <td><%= building.state %></td>
        <td><%= building.zip %></td>
        <td><%= building.headline %></td>
        <td>
          <a href="/buildings/<%= building.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/buildings/<%= building.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_building/<%= building.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

