<% if current_user.present? %>
<% if @stat.errors.any? %>
  <% @stat.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Add Stat</h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_stat" class="form-horizontal">
      <!-- Label and input for building_id -->
      <div class="form-group">
        <label for="building_id" class="col-sm-2 control-label">
          Building
        </label>
        <div class="col-sm-10">
          <%= select_tag(:building_id, options_from_collection_for_select(Building.all, :id, :name, @stat.building_id), :class => "form-control") %>
        </div>
      </div>

      <!-- Label and input for ownership -->
      <div class="form-group">
        <label for="ownership" class="col-sm-2 control-label">
          Ownership
        </label>
        <div class="col-sm-10">
          <input type="text" id="ownership" name="ownership" placeholder="Ownership" class="form-control" value="<%= @stat.ownership %>">
        </div>
      </div>

      <!-- Label and input for year_built -->
      <div class="form-group">
        <label for="year_built" class="col-sm-2 control-label">
          Year built
        </label>
        <div class="col-sm-10">
          <input type="text" id="year_built" name="year_built" placeholder="Year built" class="form-control" value="<%= @stat.year_built %>">
        </div>
      </div>

      <!-- Label and input for unit_count -->
      <div class="form-group">
        <label for="unit_count" class="col-sm-2 control-label">
          Unit count
        </label>
        <div class="col-sm-10">
          <input type="text" id="unit_count" name="unit_count" placeholder="Unit count" class="form-control" value="<%= @stat.unit_count %>">
        </div>
      </div>

      <!-- Label and input for stories -->
      <div class="form-group">
        <label for="stories" class="col-sm-2 control-label">
          Stories
        </label>
        <div class="col-sm-10">
          <input type="text" id="stories" name="stories" placeholder="Stories" class="form-control" value="<%= @stat.stories %>">
        </div>
      </div>

      <!-- Label and input for note -->
      <div class="form-group">
        <label for="note" class="col-sm-2 control-label">
          Note
        </label>
        <div class="col-sm-10">
          <textarea id="note" name="note" placeholder="Note" class="form-control" rows="3"><%= @stat.note %></textarea>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Create Stat" class="btn btn-primary">
        </div>
      </div>
    </form>
    <% else %>
  Please <a href="/users/sign_in">sign in</a> to view.
  <% end %>
  </div>
</div>
