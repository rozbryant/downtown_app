<div class="page-header">
  <h1>Assignments</h1>
</div>

<p><a href="/assignments/new" class="btn btn-primary">Add a New Assignment</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Building</th>
      <th>Area</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.building_id %></td>
        <td><%= assignment.area_id %></td>
        <td>
          <a href="/assignments/<%= assignment.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/assignments/<%= assignment.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_assignment/<%= assignment.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

