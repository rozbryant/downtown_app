<% if @space.errors.any? %>
  <% @space.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Add Space</h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_space" class="form-horizontal">
      <!-- Label and input for building_id -->
      <div class="form-group">
        <label for="building_id" class="col-sm-2 control-label">
          Building
        </label>
        <div class="col-sm-10">
          <%= select_tag(:building_id, options_from_collection_for_select(Building.all, :id, :name, @space.building_id), :class => "form-control") %>
        </div>
      </div>

      <!-- Label and input for storage -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="checkbox">
            <label for="storage">
              <input type="checkbox" id="storage" name="storage" value="1" <%= "checked" if @space.storage %>>
              Storage
            </label>
          </div>
        </div>
      </div>

      <!-- Label and input for bike_storage -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
