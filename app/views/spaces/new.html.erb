              <input type="checkbox" id="bike_storage" name="bike_storage" value="1" <%= "checked" if @space.bike_storage %>>
              Bike storage
            </label>
          </div>
        </div>
      </div>

      <!-- Label and input for party_room -->
      <div class="form-group">
