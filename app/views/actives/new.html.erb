<% if current_user.present? %>
<% if @active.errors.any? %>
  <% @active.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Add Active</h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_active" class="form-horizontal">
      <!-- Label and input for building_id -->
      <div class="form-group">
        <label for="building_id" class="col-sm-2 control-label">
          Building
        </label>
        <div class="col-sm-10">
<%= select_tag(:building_id, options_from_collection_for_select(Building.all, :id, :name, @active.building_id), :class => "form-control") %>        </div>
      </div>

      <!-- Label and input for fitness -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="checkbox">
            <label for="fitness">
              <input type="checkbox" id="fitness" name="fitness" value="1" <%= "checked" if @active.fitness %>>
              Fitness
            </label>
          </div>
        </div>
      </div>

      <!-- Label and input for in_pool -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="checkbox">
            <label for="in_pool">
              <input type="checkbox" id="in_pool" name="in_pool" value="1" <%= "checked" if @active.in_pool %>>
              In pool
            </label>
          </div>
        </div>
      </div>

      <!-- Label and input for out_pool -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="checkbox">
            <label for="out_pool">
              <input type="checkbox" id="out_pool" name="out_pool" value="1" <%= "checked" if @active.out_pool %>>
              Out pool
            </label>
          </div>
        </div>
      </div>

      <!-- Label and input for in_tennis -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="checkbox">
            <label for="in_tennis">
              <input type="checkbox" id="in_tennis" name="in_tennis" value="1" <%= "checked" if @active.in_tennis %>>
              In tennis
            </label>
          </div>
        </div>
      </div>

      <!-- Label and input for out_tennis -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="checkbox">
            <label for="out_tennis">
              <input type="checkbox" id="out_tennis" name="out_tennis" value="1" <%= "checked" if @active.out_tennis %>>
              Out tennis
            </label>
          </div>
        </div>
      </div>

      <!-- Label and input for bball -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="checkbox">
            <label for="bball">
              <input type="checkbox" id="bball" name="bball" value="1" <%= "checked" if @active.bball %>>
              Bball
            </label>
          </div>
        </div>
      </div>

      <!-- Label and input for spa -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <div class="checkbox">
            <label for="spa">
              <input type="checkbox" id="spa" name="spa" value="1" <%= "checked" if @active.spa %>>
              Spa
            </label>
          </div>
        </div>
      </div>

      <!-- Label and input for note -->
      <div class="form-group">
        <label for="note" class="col-sm-2 control-label">
          Note
        </label>
        <div class="col-sm-10">
          <textarea id="note" name="note" placeholder="Note" class="form-control" rows="3"><%= @active.note %></textarea>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Create Active" class="btn btn-primary">
        </div>
      </div>
    </form>
    <% else %>
  Please <a href="/users/sign_in">sign in</a> to view.
  <% end %>
  </div>
</div>

