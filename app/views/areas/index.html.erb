<div class="page-header">
  <h1>Areas</h1>
</div>
<% if current_user.present? %>
<p><a href="/areas/new" class="btn btn-primary">Add a New Area</a></p>
<% else %>
  Please <a href="/users/sign_in">sign in</a> to view buildings in these neighborhoods.
  <% end %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @areas.each do |area| %>
      <tr>
        <td><%= area.name %></td>
        <td>
          <a href="/areas/<%= area.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/areas/<%= area.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_area/<%= area.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

